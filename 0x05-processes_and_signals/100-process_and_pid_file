#!/usr/bin/env bash

# Create a cleanup function to delete the PID file and exit
cleanup() {
    rm -f /var/run/myscript.pid
    exit
}

# Trap signals with specific messages and cleanup actions
trap 'echo "Y U no love me?!";' SIGINT
trap 'echo "I hate the kill command"; cleanup' SIGTERM
trap 'cleanup' SIGQUIT

# Save the current process ID in a file
echo "$$" > /var/run/myscript.pid

# Infinite loop to display message every 2 seconds
while true; do
    echo "To infinity and beyond"
    sleep 2
done
