#!/usr/bin/env bash
# A bash script that creates a MySQL dump of all databases
#+ and compresses it into a tar.gz archive.

# Check if password argument is provided
if [ $# -ne 1 ]; then
    echo "Usage: $0 <mysql_password>"
    exit 1
fi

# Store MySQL password from argument
MYSQL_PWD=$1

# Create MySQL dump of all databases
mysqldump -u root -p"$MYSQL_PWD" --all-databases > backup.sql

# Check if mysqldump was successful
if [ $? -ne 0 ]; then
    echo "Error: MySQL dump failed"
    exit 1
fi

# Get current date in day-month-year format
DATE=$(date +"%d-%m-%Y")

# Create tar.gz archive with the backup
tar -czf "$DATE.tar.gz" backup.sql

# Check if tar command was successful
if [ $? -ne 0 ]; then
    echo "Error: Compression failed"
    exit 1
fi
