#!/usr/bin/env bash
# A bash script that creates a MySQL dump of all databases
#+ and compresses it into a tar.gz archive.

# Check if the password argument is provided
if [ $# -ne 1 ]; then
    echo "Usage: $0 <mysql_root_password>"
    exit 1
fi

# Generate the MySQL dump of all databases
mysqldump -u root -p"$1" --all-databases > backup.sql

# Create a compressed tar.gz archive with the current date in the name
current_date=$(date +%d-%m-%Y)
tar -czvf "$current_date.tar.gz" backup.sql
